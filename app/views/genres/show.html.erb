<%= render 'shared/header' %>

<div class='ui main container'>
  <h1 class="ui header">ジャンル別ゲーム一覧</h1>
  <div class="ui divider"></div>

  <div class="ui two column grid">
    <div class="four wide column">
    
      <div class="ui vertical fluid menu">
        <% @genres.each do |genre| %>
          <% if genre == @genre %>
            <%= link_to genre.name, genre_path(genre), class: 'active item' %>
          <% else %>
            <%= link_to genre.name, genre_path(genre), class: 'item' %>
          <% end %>
        <% end %>
      </div>

    </div>
    <div class="twelve wide column">

      <%= render 'shared/game_list', { games: @games, q: @q, menu_title: @genre.name } %>

    </div>
  </div>
</div>