<div class="ui inverted borderless attached menu">
  <div class="ui container">
    <a class="header item" href="/">My Game DB</a>
    <div class="right menu">
      <% if user_signed_in? %>
        <div class="item">
          <i class="plus circle icon"></i>
          <%= link_to 'Add Game', new_game_path %>
        </div>
        <div class="ui dropdown item">
          <div class="header">
            <span><%= current_user.name %></span>
            <i class="caret down icon"></i>
          </div>
          <div class="menu">
            <%= link_to user_path(current_user), class: 'item' do %>
              <small>My Page</small>
            <% end %>
            <%= link_to destroy_user_session_path, method: :delete, class: 'item' do %>
              <small>Log Out</small>
            <% end %>
          </div>
        </div>
        
      <% else %>
        <%= link_to 'SIGN UP', new_user_registration_path, class: "ui item" %>
        <%= link_to 'LOG IN', new_user_session_path, class: "ui item" %>
      <% end %>
     
      
    </div>
  </div>
</div>